#calculates Area using input of radius from user
from math import pi
flag=1
x=0.0
while flag==1:
    x=input("Enter radius :\n")
    print(type(5))
    if (type(float(x)) is float):
        flag=0
    else :
        print("Enter a valid number! \n")
Area=pi*float(x)*float(x)
print("Area = ")
print(Area)
